{
    "name": "@rnw-community/platform",
    "version": "1.12.1",
    "description": "React native web platform utils and helpers",
    "keywords": [
        "platform utils",
        "platform helpers",
        "react",
        "react-native",
        "react native",
        "react-native-web"
    ],
    "repository": "https://github.com/rnw-community/rnw-community/tree/master/packages/platform",
    "license": "MIT",
    "exports": {
        ".": {
            "types": "./dist/esm/index.d.ts",
            "import": "./dist/esm/index.js",
            "require": "./dist/cjs/index.js"
        }
    },
    "main": "dist/cjs/index.js",
    "module": "dist/esm/index.js",
    "types": "dist/esm/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "sideEffects": false,
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "react": "^18.3.1",
        "react-native": "^0.76.1",
        "react-native-config": "^1.6.1"
    },
    "peerDependencies": {
        "react": ">=18",
        "react-native": ">=0.72",
        "react-native-config": ">=1.4"
    },
    "scripts": {
        "ts": "run -T tsc --pretty -p tsconfig.json",
        "build:esm": "run -T tsc --pretty -p tsconfig.build-esm.json",
        "build:cjs": "run -T tsc --pretty -p tsconfig.build-cjs.json",
        "build": "yarn build:esm && yarn build:cjs && rm -rf ./dist/*/*.tsbuildinfo",
        "lint": "run -T eslint src",
        "lint:fix": "run -T eslint --fix src",
        "test": "run -T jest",
        "test:coverage": "run -T jest --coverage",
        "format": "run -T prettier --write \"./src/**/*.{ts,tsx}\"",
        "clear": "rm -rf coverage && rm -rf dist && rm -f *.tsbuildinfo",
        "clear:deps": "rm -rf ./node_modules && rm -rf ./dist"
    },
    "gitHead": "4fd24bd92936d1793f8f7ff08d6420fce4f211d9"
}
